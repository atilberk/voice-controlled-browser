{

  "manifest_version": 2,
  "name": "* Voice Controlled Browser",
  "version": "0.1",

  "description": "Allows voice control of web pages",
  "homepage_url": "https://bitbucket.org/atilberk/vcb",

  "icons": {
    "48": "icon-48.png"
  },

  "permissions": [
    "tabs",
    "*://vlocal.com/vcb/*",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icon-32.png",
    "default_title": "VCB",
    "default_popup": "/popup/receive_command.html"
  },

  "background" : {
    "scripts" : ["/lib/jquery-3.1.1.min.js","/background/parse.js","/background/script.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://vlocal.com/vcb/*"],
      "js": ["/lib/jquery-3.1.1.min.js", "/lib/responsivevoice.js", "/content_scripts/vcb.js"],
      "run_at": "document_start"
    }
  ]

}
